<style>
      #menu-toggle:checked + #menu {
        display: block;
      }
  </style>


  <header class="lg:px-16 px-6  flex flex-wrap items-center lg:py-0 py-2 text-lg">
    <div class="flex-1 flex justify-between items-center text-gray-700 hover:text-white font-bold">
    <%=link_to image_tag("studmate_logo.png", size:"200x200"),root_path %>  
 
  </div> 

   <label for="menu-toggle" class="pointer-cursor lg:hidden block"><svg class="fill-current text-gray-900" xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 20 20"><title>menu</title><path d="M0 3h20v2H0V3zm0 6h20v2H0V9zm0 6h20v2H0v-2z"></path></svg></label>
  <input class="hidden" type="checkbox" id="menu-toggle" />

  <div class="hidden lg:flex lg:items-center lg:w-auto w-full" id="menu">
    <nav>
    <%if user_signed_in?%>
      <ul class="lg:flex items-center justify-between text-gray-700 pt-4 lg:pt-0 text-lg">
        <li><%= link_to current_user.username.capitalize(), edit_user_registration_path, :class => "hover:text-blue-400 font-bold lg:p-4 py-3 px-0 block font-serif" %></li>
        <li><%= link_to "Logout", destroy_user_session_path, method: :delete, :class => "hover:text-blue-400 font-bold lg:p-4 py-3 px-0 block font-serif " %></li>
      </ul>
    </nav>
  </div>
  <%else%>
  <ul class="lg:flex items-center justify-between text-gray-700 pt-4 lg:pt-0 text-lg">
        <li><%= link_to "Log in", new_user_session_path, :class => "hover:text-blue-400 font-bold lg:p-4 py-3 px-0 block font-serif" %></li>
        <li><%= link_to "Sign up", new_user_registration_path, :class => "hover:text-blue-400 font-bold lg:p-4 py-3 px-0 block font-serif " %></li>
      </ul>
    </nav>
  </div>
  
<%end%>
  </header>

    <% if flash[:notice] %>
      <%= render 'layouts/alerts' %>
    <% end %>

    <% if flash[:alert] %>
      <%= render 'layouts/alerts' %>
    <% end %>


 
 