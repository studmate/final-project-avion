<h1>Pets</h1>
<%= link_to 'Home', home_index_path %>
<br>
<%= link_to 'Add Pet', new_pet_path %>
<br>
<table>
  <thead>
    <th>Name</th> 
    <th>Breed</th>
    <th>Specie</th>
    <th>Birth</th>
    <th>Age</th>
    <th>Gender</th>
    <th>Vaccinated</th>
    <% unless Rails.env.production? %>
     <th>Photos count</th>
    <% end %>
    <th colspan="4"></th>
  </thead>
  <tbody>
    <% @pets.each do |pet| %>
    <tr>
      <td><%= pet.name %></td>
      <td><%= pet.breed %></td>
      <td><%= pet.specie %></td>
      <td><%= pet.birthdate.strftime("%B %d, %Y") %></td>
      <td><%= pet.age %></td>
      <td><%= pet.gender ? 'Male' : 'Female' %></td>
      <td><%= pet.vaccinated ? 'Yes' : 'No' %></td>
      <% unless Rails.env.production? %>
      <td>
        <%= pet.images.count%>
      </td>
      <% end %>
      <td><%= link_to 'Show', pet_path(pet) %></td>
      <td><%= link_to 'Edit', edit_pet_path(pet) %></td>
      <td><%= link_to 'Delete', pet, method: :delete, data: { confirm: 'Remove pet?'} %></td>
    </tr>
    <% end %>
  </tbody>
</table>
