  <div class="swiper-button-prev"></div>
  <div class="swiper-button-next"></div>

  <!-- Additional required wrapper -->
  <div class="swiper-wrapper">
      <% if pet.images? %>
  <% pet.images.each do |img| %>
    <%=image_tag(img.thumb.url, alt: "Image",  :class => "object-fill rounded-lg rounded-b-none swiper-slide") %>
  <% end %>
<% end %>
  </div>
</div>
<div class = "bg-white border rounded-b-lg  rounded-t-none  ">
<div class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded cursor-pointer text-center">
  <%=link_to "View Profile", edit_pet_path(pet)%>
</div>
      <div class="flex justify-between">
        <div class="text-xl float-left ml-2"><%=pet.name%> 
        <span class="font-light ml-5"><%=pet.age%></span>
      </div> 
    </div>
    <span class ="ml-2 text-gray-400 font-bold user-location"  >
    </span>
    <p class = "text-center text-justify" > <br/>
