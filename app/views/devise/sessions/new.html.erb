<%= render 'shared/header'%>

<body class = "bg-blue-200">
  <h2 class="mt-20 text-center text-3xl font-extrabold text-gray-900 mb-8">
        Sign in to your account
</h2>
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
<div  class="max-w-md mx-auto md:max-w-2xl">
  <div class="field text-center">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"px-3 py-3 placeholder-blueGray-300 text-blueGray-600 relative bg-white bg-white rounded text-sm border-0 shadow outline-none focus:outline-none focus:ring w-8/12 mb-3 mt-6" , placeholder:"Email address"%>
  </div>

  <div class="field text-center">
    <%= f.password_field :password, autocomplete: "current-password",class:" mb-4 px-3 py-3 placeholder-blueGray-300 text-blueGray-600 relative bg-white bg-white rounded text-sm border-0 shadow outline-none focus:outline-none focus:ring w-8/12", placeholder:"Password" %>
  </div>
  <div class="actions text-center">
    <%= f.submit "Log in",class:" mb-2 cursor-pointer justify-center py-2 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-500 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 w-3/12" %>
  </div>
<% end %>
  <div class=" text-center font-medium">
  <%= link_to "Forgot your password?", new_password_path(resource_name), {:style=>'color:blue;'} %><br />
 </div>
  <div class=" text-center font-medium">
Don't have an Account? <%= link_to "Register here", new_registration_path(resource_name), {:style=>'color:blue;'}  %>
 </div>

</div>
</div>

</div>

